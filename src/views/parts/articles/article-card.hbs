<div class="article-card">
    <div class="article-card__img-wrap">
        <picture>
            <source type="image/webp" srcset="
                img/article/{{imgName}}.webp    1x,
                img/article/{{imgName}}@2x.webp 2x
            " />
            <img src="img/article/{{imgName}}.png" srcset="img/article/{{imgName}}@2x.png 2x" alt="{{imgName}}"
                class="article__img img-fluid" />
        </picture>
    </div>

    <div class="article-card__body">
        <div class="article-card__date">{{date}}</div>
        <h6 class="article-card__title"><a href="#" class="stretched-link">{{title}}</a></h6>
    </div>
</div>
